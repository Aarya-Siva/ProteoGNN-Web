# ProteoGNN Web Application
# Replit Configuration

run = "python main.py"
entrypoint = "main.py"

hidden = [".pythonlibs", "__pycache__", "*.pyc"]

[nix]
channel = "stable-23_11"

[env]
PYTHONPATH = "${REPL_HOME}:${PYTHONPATH}"
PORT = "5000"

[packager]
language = "python3"

[packager.features]
enabledForHosting = true
packageSearch = true
guessImports = true

[languages]

[languages.python3]
pattern = "**/*.py"

[languages.python3.languageServer]
start = "pylsp"

[deployment]
run = ["sh", "-c", "gunicorn --bind 0.0.0.0:$PORT main:app"]
deploymentTarget = "cloudrun"

[[ports]]
localPort = 5000
externalPort = 80
